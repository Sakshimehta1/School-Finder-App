<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragInfo"
    android:background="@drawable/circle_back_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingHorizontal="0dp"
    android:paddingVertical="30dp"
    tools:context=".fragment_school_info3xml"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crdview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:elevation="15dp"
        app:cardCornerRadius="10dp"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    app:tint="@color/green" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" STEP 3"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="4dp"
                    android:background="@color/colorPrimaryDark"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"/>
            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connect"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fbimage"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_facebook"/>
                        <ImageView
                            android:id="@+id/instaimg"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_instagram"/>
                        <ImageView
                            android:id="@+id/youtubeimg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_youtube"/>
                        <ImageView
                            android:id="@+id/linkimage"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_linkedin"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/fbedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="20dp"
                            app:boxBackgroundColor="@color/white"
                            android:textColorHint="#000"
                            app:hintAnimationEnabled="true"
                            app:helperTextTextColor="@color/black"
                            app:startIconTint="#044F9F"
                            app:startIconDrawable="@drawable/ic_facebook"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_facebook"
                                android:hint=" Enter URL"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/instaedit"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="20dp"
                            app:boxBackgroundColor="@color/white"
                            android:textColorHint="#000"
                            app:hintAnimationEnabled="true"
                            app:helperTextTextColor="@color/black"
                            app:startIconTint="@color/black"
                            app:startIconDrawable="@drawable/ic_instagram_logo"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint=" Enter URL"
                                android:textColor="@color/black"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/youtbedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="20dp"
                            app:boxBackgroundColor="@color/white"
                            android:textColorHint="#000"
                            app:hintAnimationEnabled="true"
                            app:helperTextTextColor="@color/black"
                            app:startIconTint="@android:color/holo_red_dark"
                            app:startIconDrawable="@drawable/ic_youtube"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint=" Enter URL"
                                android:textColor="@color/black"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/linkedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="20dp"
                            app:boxBackgroundColor="@color/white"
                            android:textColorHint="#000"
                            app:hintAnimationEnabled="true"
                            app:helperTextTextColor="@color/black"
                            app:startIconTint="#056687"
                            app:startIconDrawable="@drawable/ic_linkedin"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint=" Enter URL"
                                android:textColor="@color/black"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"
                        app:boxBackgroundColor="@color/white"
                        android:textColorHint="#000"
                        app:hintAnimationEnabled="true"
                        app:helperTextTextColor="@color/black"
                        app:startIconTint="@color/black"
                        app:startIconDrawable="@drawable/ic_rupee_indian"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Average Fees per Annum"
                            android:inputType="number"
                            android:textColor="@color/black"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="10dp"
                        android:animateLayoutChanges="true"
                        android:visibility="gone"
                        app:chipSpacingVertical="1dp"
                        android:paddingHorizontal="20dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"
                        app:boxBackgroundColor="@color/white"
                        android:textColorHint="#000"
                        app:hintAnimationEnabled="true"
                        app:helperTextTextColor="@color/black"
                        app:startIconTint="@color/black"
                        app:startIconDrawable="@drawable/baseline_note_add_black_24dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/documnts"
                            android:focusable="false"
                            android:cursorVisible="false"
                            android:hint="Add Documents Required for Admission"
                            android:inputType="textAutoComplete"
                            android:textColor="@color/black"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_fac"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="10dp"
                        android:animateLayoutChanges="true"
                        app:chipSpacingVertical="1dp"
                        android:paddingHorizontal="20dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"
                        app:boxBackgroundColor="@color/white"
                        android:textColorHint="#000"
                        app:hintAnimationEnabled="true"
                        app:helperTextTextColor="@color/black"
                        app:startIconTint="@color/black"
                        app:startIconDrawable="@drawable/ic_location_city_24px"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/fac"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:cursorVisible="false"
                            android:hint="Add Facilities"
                            android:inputType="textAutoComplete"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crdview"
        android:layout_alignLeft="@+id/crdview"
        android:layout_alignRight="@+id/crdview"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="50dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <ProgressBar
        android:id="@+id/prog3"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        android:visibility="gone"/>

</LinearLayout>


